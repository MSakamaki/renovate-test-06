{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "labels": ["dependencies"],
  "extends": [],
  "dependencyDashboard": true,
  "timezone": "Asia/Tokyo",
  "dependencyDashboardTitle": "依存関係ダッシュボード",
  "enabledManagers": ["npm", "dockerfile"],
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true
  },
  "branchConcurrentLimit": 0,
  "packageRules": [
    {
      "packageNames": ["@nrwl/packages"],
      "packagePatterns": [
        "^@ngrx/",
        "^@angular/",
        "^@angular-eslint/",
        "^@angular-devkit/",
        "^typescript",
        "^jest",
        "^zone.js",
        "^tslib",
        "^rxjs",
        "^@nrwl/angular",
        "^@nrwl/cli",
        "^@nrwl/cypress",
        "^@nrwl/eslint-plugin-nx",
        "^@nrwl/jest",
        "^@nrwl/linter",
        "^@nrwl/tao"
      ],
      "enabled": false,
      "groupName": "Nx Included"
    },
    {
      "packageNames": ["@nrwl/workspace"],
      "packagePatterns": ["^@nrwl/workspace$"],
      "ignoreDeps": [],
      "groupName": "Nrwl workspace",
      "postUpgradeTasks": {
        "commands": [
          "(cd frontend && ls -la",
          "(cd frontend && NG_CLI_ANALYTICS=ci npm ci --ignore-scripts)",
          "(cd frontend && npx nx migrate @nrwl/workspace@latest)",
          "(cd frontend && NG_CLI_ANALYTICS=ci npm i --ignore-scripts)",
          "(cd frontend && sh nx-run-migrations.sh)"
        ],
        "fileFilters": ["**/**"]
      }
    }
  ]
}