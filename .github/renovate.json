{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "dryRun": true,
  "labels": ["dependencies"],
  "extends": ["config:base"],
  "ignorePresets": [
    "group:jestMonorepo"
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboardTitle": "依存関係ダッシュボード",
  "enabledManagers": ["npm", "dockerfile"],
  "rangeStrategy": "replace",
  "lockFileMaintenance": {
    "enabled": true
  },
  "branchConcurrentLimit": 0,
  "packageRules": [
    {
      "groupName": "Nx Support Packages",
      "matchManagers": ["npm"],
      "packageNames": ["@nrwl/packages"],
      "packagePatterns": [
        "^eslint$",
        "^eslint-config-prettier$",
        "^jest-preset-angular$",
        "^ts-jest$",
        "^jest$",
        "^@ngrx/",
        "^@angular-eslint/",
        "^@typescript-eslint/"
      ],
      "enabled": false
    },
    {
      "groupName": "@nrwl/nx package group (major or minor)",
      "matchSourceUrlPrefixes": ["https://github.com/nrwl/nx"],
      "enabled": false
    },
    {
      "groupName": "@angular/core package group (major or minor)",
      "matchSourceUrlPrefixes": ["https://github.com/angular/angular"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "groupName": "@angular/cli package group (major or minor)",
      "matchPackageNames": [
        "@angular/cli",
        "@angular-devkit/architect",
        "@angular-devkit/build-angular",
        "@angular-devkit/build-webpack",
        "@angular-devkit/core",
        "@angular-devkit/schematics"
      ],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "groupName": "@angular/material package group (major or minor)",
      "matchPackageNames": [
        "@angular/material",
        "@angular/cdk"
      ],
      "matchUpdateTypes": ["patch","pin","digest","lockFileMaintenance","rollback","bump"],
      "enabled": true
    },
    {
      "groupName": "typescript (major or minor)",
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "groupName": "rxjs (major)",
      "matchPackageNames": ["rxjs"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "groupName": "@types packages (minor or patch)",
      "matchPackagePatterns": ["^@types/"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "@nrwl/nx package group (major or minor)",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "enabled": true,
      "postUpgradeTasks": {
        "commands": [
          "(cd frontend && NG_CLI_ANALYTICS=ci npm ci --ignore-scripts)",
          "(cd frontend && npx nx migrate @nrwl/workspace@latest)",
          "(cd frontend && NG_CLI_ANALYTICS=ci npm i --ignore-scripts)",
          "(cd frontend && sh nx-run-migrations.sh)"
        ],
        "fileFilters": ["**/**"]
      }
    },
    {
      "groupName": "@angular/material package group (major or minor)",
      "matchUpdateTypes": ["major", "minor"],
      "enabled": true,
      "postUpgradeTasks": {
        "commands": [
          "(cd frontend && NG_CLI_ANALYTICS=ci npm ci)",
          "(cd frontend && npx nx version)",
          "(cd frontend && FORCE_NG_UPDATE=true npx ng update @angular/material --allowDirty --force)"
        ],
        "fileFilters": ["**/**"]
      }
    },
    {
      "packageNames": ["cypress"],
      "matchPackageNames": ["cypress"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "enabled": true,
      "groupName": "Cypress"
    }
  ]
}